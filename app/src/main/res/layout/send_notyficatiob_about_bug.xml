<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/sendBugADTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter description of bug"
        android:textSize="@dimen/ttlTextSize"
        android:textAlignment="center"
        android:layout_margin="@dimen/marginOfElements"/>

    <EditText
        android:id="@+id/sendBugADET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter here"
        android:textAlignment="center"
        android:layout_below="@+id/sendBugADTtl"
        android:textSize="20dp"
        android:layout_margin="@dimen/marginOfElements"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendBugADET"
        android:layout_margin="@dimen/marginOfElements">

        <Button
            android:id="@+id/sendBugBtnSend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="send"/>

        <Button
            android:id="@+id/sendBugBtnClose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Close"/>

    </LinearLayout>
</RelativeLayout>