<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/settings_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat app"
        android:textSize="@dimen/ttlTextSize"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:id="@+id/settingsTtl"
        android:layout_margin="@dimen/marginOfElements"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/settingsLLDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsTtl"
        android:orientation="horizontal"
        android:layout_margin="@dimen/marginOfElements"
        >

    <TextView
        android:id="@+id/settingsSwitchDesign"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="@string/settingsChooseTheme"
        android:textSize="@dimen/textSizeOfSimpleElements"
        android:textAlignment="center"
        android:textColor="@color/white"
        />

    <Switch
        android:id="@+id/settingsSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="30dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsSendBugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/marginOfElements"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/settingTVBugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settingsMessageAboutBug"
            android:textSize="@dimen/textSizeOfSimpleElements"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>