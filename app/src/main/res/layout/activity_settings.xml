<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activitySettings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_green"
    tools:context=".MainActivities.SettingsActivity">

    <TextView
        android:id="@+id/settingsTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:gravity="center"
        android:text="Chat app"
        android:textColor="@color/white"
        android:textSize="@dimen/ttlTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settingsSwitchDesign"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/settingsSwitchDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/settingsChooseTheme"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeOfSimpleElements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTtl" />

    <Switch
        android:id="@+id/settingsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:paddingRight="30dp"
        app:layout_constraintStart_toEndOf="@+id/settingsSwitchDesign"
        app:layout_constraintTop_toBottomOf="@+id/settingsTtl" />

    <TextView
        android:id="@+id/settingTVBugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/settingsMessageAboutBug"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeOfSimpleElements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>