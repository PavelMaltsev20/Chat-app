<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/regTVTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/standard_margin"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/frag_reg_title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />

    <EditText
        android:id="@+id/regETUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regETEmail"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="@string/frag_reg_enter_name"
        android:textColor="@color/white"
        android:textColorHint="#60FFFFFF" />


    <EditText
        android:id="@+id/regETEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regETPass"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="@string/frag_reg_enter_email"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="#60FFFFFF"
        />

    <EditText
        android:id="@+id/regETPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="@string/frag_reg_enter_password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#60FFFFFF" />

    <EditText
        android:id="@+id/regETPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regETPass"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="@string/frag_reg_confirm_password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#60FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/regBtnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/frag_reg_btn_cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/regBtnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/frag_reg_btn_confirm"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>