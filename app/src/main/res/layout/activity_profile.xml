<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/main_background">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/standard_margin"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/profileFirstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIV">


        <TextView
            android:id="@+id/profileTVEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_weight="1"
            android:text="Email"
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/profileTVEmail2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileIV"
            android:layout_margin="@dimen/standard_margin"
            android:layout_toRightOf="@+id/profileTVEmail"
            android:layout_weight="2"
            android:text="Email"
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileSecondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileFirstLayout"
        >

        <TextView
            android:id="@+id/profileTVName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTVEmail"
            android:layout_margin="@dimen/standard_margin"
            android:layout_weight="1"
            android:text="Name "
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/profileTVName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTVEmail"
            android:layout_margin="@dimen/standard_margin"
            android:layout_toRightOf="@+id/profileTVName"
            android:layout_weight="2"
            android:text="Name "
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/profileThirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileSecondLayout">

        <TextView
            android:id="@+id/profileTVPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTVName"
            android:layout_margin="@dimen/standard_margin"
            android:layout_weight="1"
            android:text="Password"
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/profileTVPassword2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTVName"
            android:layout_margin="@dimen/standard_margin"
            android:layout_toRightOf="@+id/profileTVPassword"
            android:layout_weight="2"
            android:text="Click here to change"
            android:textSize="@dimen/textSizeOfProfileElements"
            android:textColor="@color/white"/>

    </LinearLayout>


</RelativeLayout>