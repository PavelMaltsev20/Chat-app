<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/loginTVTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authorization"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_margin="@dimen/marginOfElements"
        android:fontFamily="cursive"/>


    <EditText
        android:id="@+id/loginETLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_above="@+id/loginETPass"
        android:inputType="textWebEmailAddress"
        android:textColorHint="@color/white"
        android:textColor="@color/white"

        />

    <EditText
        android:id="@+id/loginETPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/loginTVResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:layout_below="@+id/loginETPass"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/marginOfElements"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/loginBtnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_margin="@dimen/marginOfElements"
            />

        <Button
            android:id="@+id/loginBtnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_margin="@dimen/marginOfElements"/>

    </LinearLayout>

</RelativeLayout>