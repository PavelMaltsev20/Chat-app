<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pavel.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Services.App"
        android:allowBackup="true"
        android:icon="@drawable/chat_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_icon_for_label_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivities.Login_Register.ActivityLoginRegisterContainer"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivities.SettingsActivity" />
        <activity android:name=".MainActivities.ProfileActivity" />
        <activity android:name=".MainActivities.ChatWithUserActivity" />
        <activity android:name=".MainActivities.UsersScreens.ActivityUsers" />
        <activity android:name=".Services.App" />

        <service android:name=".Services.NotificationService" />
    </application>
</manifest>